[user]
	name = Jon Higgs
	email = jhiggs@eml.cc
[help]
	autocorrect = 1
[core]
	excludesfile = ~/.config/git/ignore_global
[commit]
	template = ~/.config/git/commit_template
[diff]
	tool = opendiff
[merge]
	tool = opendiff
[push]
	default = current
[difftool "opendiff"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
[alias]
	p = pull
	s = status
	co = checkout
	rbom = !git fetch && git rebase origin/master
	branch-cleanlocal = "!for b in $(git branch | grep -v '^*'); do git branch -d $b; done"
	rbi = !git rebase -i origin/master
	amend = commit -v --amend
	reword = commit -v --amend
	fixup = !git reset --soft HEAD~ && git commit --amend --no-edit
	pr = !gh pr create --fill

#[url "git@github.com:"]
#	insteadOf = https://github.com/
[pull]
	rebase = true

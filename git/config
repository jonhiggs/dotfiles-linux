[user]
	name = Jon Higgs
	email = jhiggs@eml.cc
[help]
	autocorrect = 1
[core]
	excludesfile = ~/.config/git/ignore_global
[commit]
	template = ~/.config/git/commit_template
[push]
	default = current
[fetch]
    prune = true
[alias]
	p = pull
	s = status
	co = checkout
	rbom = !git fetch && git rebase origin/HEAD
	rbi = !git rebase -i origin/HEAD
	rbc = rebase --continue
	mt = mergetool
	branch-delete-local = "!git branch -l | awk '$1==\"*\" {next}; ($1==\"main\" || $1==\"master\") {next}; {print $1}' | xargs -I{} git branch -D {}"
    branch-delete-remote = "!git branch -r | grep -v -e 'origin/master' -e 'origin/main' | xargs -I{} git branch -d -r {}"
	amend = commit -v --amend
	reword = commit -v --amend
	fixup = !git reset --soft HEAD~ && git commit --amend --no-edit
	pr = !gh pr create --fill
	dpr = !gh pr create --draft --fill
	ghclone = !gh repo clone
	pro = !rrun open $(gh pr view | awk '/^url:/ { print $2 }')

[url "git@github.com:"]
	insteadOf = https://github.com/

[pull]
	rebase = true

[sendemail]
from = Jon Higgs <jhiggs@eml.cc>
smtpuser =
smtpserver = "/usr/bin/msmtp"
smtpserveroption = "-a"
smtpserveroption = "fastmail"
smtpencryption = tls
chainreplyto = false
confirm = auto
[merge]
	tool = diffconflicts
[mergetool]
	prompt = true
	keepBackup = false
[mergetool "diffconflicts"]
	cmd = nvim -c DiffConflicts \"$MERGED\" \"$BASE\" \"$LOCAL\" \"$REMOTE\"
	trustExitCode = true

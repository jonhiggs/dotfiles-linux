#!/usr/bin/env bash
CMUS_WINDOW=8

fix_alsa() {
  sudo alsactl kill quit
  sudo modprobe -r snd_intel8x0
  sudo modprobe snd_intel8x0
  sudo /etc/init.d/alsa-utils restart
}

window_exists() {
  tmux list-windows \
    | grep -q ^${CMUS_WINDOW}
  return $?
}

create_window() {
  fix_alsa
  tmux new-window -c ${HOME}/Music -t ${CMUS_WINDOW} -n cmus
  tmux send-keys -t:${CMUS_WINDOW} "cmus; exit" Enter
}

select_window() {
  tmux select-window -t:${CMUS_WINDOW}
}

window_exists || create_window
select_window
